@page "/ages/create"
@using Microsoft.EntityFrameworkCore
@using PetAdoption_Project.Domain
@inject IDbContextFactory<PetAdoption_Project.Data.PetAdoption_ProjectContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Age</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Age" OnValidSubmit="AddAge" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="age" class="form-label">age:</label> 
                <InputNumber id="age" @bind-Value="Age.age" class="form-control" /> 
                <ValidationMessage For="() => Age.age" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="Age.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => Age.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="dateupdated" class="form-label">DateUpdated:</label> 
                <InputDate id="dateupdated" @bind-Value="Age.DateUpdated" class="form-control" /> 
                <ValidationMessage For="() => Age.DateUpdated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="Age.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => Age.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="Age.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => Age.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/ages">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Age Age { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddAge()
    {
        using var context = DbFactory.CreateDbContext();
        context.Age.Add(Age);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/ages");
    }
}
